<% if logged_in? %>
  <% if comment.favorited?(current_user) %>
    <%= render 'commentfavorites/unfavorite', comment: comment %>
  <% else %>
    <%= render 'commentfavorites/favorite', comment: comment %>
  <% end %>
<% else %>
  <%= link_to login_path do %>
    <i class="bi bi-arrow-through-heart"></i>
    <%= comment.favorites.count %>
  <% end %>
<% end %>
