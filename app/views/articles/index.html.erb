<div class= "bg-white">
  <div class= "w-5/6 mx-auto max-w-screen-xl">
  <div class= "grid grid-cols-1 lg:grid-cols-3 gap-4 mt-6">
    <% if @articles.present? %>
      <% @articles.each do |article| %>
      <div class="p-4 border rounded-lg">
        <h2 class="text-xl mt-2 text-gray-600"><%= link_to article.title %></h2> 
        <h3 class="text-sm text-gray-600">作成日：<%= l article.created_at, format: :long%></h3>
        <h3 class="text-sm text-gray-600"><%= article.user.name %></h3>
      </div>
    <% end %>
    <% else %>
      <p>投稿がありません</p>
    <% end %>
  </div>
</div>
</div>

