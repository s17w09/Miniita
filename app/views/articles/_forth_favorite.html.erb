<div class="tooltip" data-tip="独自の視点！">
  <%= link_to article_favorites_path(@article.id, type: :like_forth),
              data: { turbo_method: :post, turbo_stream: true }, id: 'forth-favorite', class: 'app-link like-button-4' do %>
    <i class="bi bi-brightness-alt-high text-gray-600 hover:text-teal-400"></i>
    <p class="text-xs paragraph"><%= @article.favorites.where(favorite_type: 'like_forth').count %></p>
  <% end %>
</div>
