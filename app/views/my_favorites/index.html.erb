<% content_for :title, page_title('いいねした記事') %>
<div class="w-5/6 mx-auto max-w-screen-xl flex-grow mb-20 md:w-4/6">
  <div class="mt-20">
    <h1 class="mb-3 text-3xl font-bold text-gray-600">いいねした記事</h1>
    <p class="text-gray-600 mb-10">項目を開くと、これまで開いていた項目が閉じます。</p>
    <div class="join join-vertical w-full">
      <div class="collapse collapse-arrow join-item border-gray-400 border">
        <input type="radio" name="my-accordion-4" checked="checked">
        <div class="ml-3 text-xl font-bold text-gray-600 mb-1 collapse-title text-xl font-medium">
          <i class="bi bi-hand-thumbs-up"></i> 参考になった： <%= @like_first.count %> 記事
        </div>
        <div class="collapse-content">
          <% @like_first.each do |favorite| %>
            <div class="p-4 border rounded-lg mb-3 bg-stone-50 float1">
              <%= link_to article_path(favorite.article), class: 'app-link' do %>
                <p class="pl-4 font-semibold text-xl mt-2 text-gray-600"><%= favorite.article.title %></p>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="collapse collapse-arrow join-item border-gray-400 border">
        <input type="radio" name="my-accordion-4">
