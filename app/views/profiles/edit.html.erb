<% content_for :title, page_title('プロフィール') %>
<div class="w-5/6 mx-auto max-w-screen-xl mt-20">
  <h1 class="text-4xl font-bold text-gray-600 mb-20">プロフィール更新</h1>
  <%= form_with model: @user, url: profile_path do |form| %>
    <div class="mb-5">
      <%= form.label :email, 'メールアドレス', class: 'ml-4 text-base font-medium leading-6 text-gray-600' %>
      <%= form.email_field :email, required: true,
                                   class: 'text-xl font-bold pl-4 bg-gray-100 text-gray-600 block w-full rounded-md border-0 py-2.5 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600' %>
    </div>
    <div class="mb-5">
      <%= form.label :name, '氏名', class: 'ml-4 text-base font-medium leading-6 text-gray-600' %>
      <%= form.text_field :name, required: true,
                                 class: 'text-xl font-bold mb-20 pl-4 bg-gray-100 text-gray-600 block w-full rounded-md border-0 py-2.5 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600' %>
    </div>
    <%= form.submit '更新',
                    class: 'app-link mt-10 flex w-full justify-center rounded-md bg-blue-900 text-gray-100 px-3 py-1.5 text-sm font-semibold leading-6 shadow-sm hover:bg-blue-800 focus:outline-none focus:ring-2 focus:ring-blue-800' %>
  <% end %>
</div>
